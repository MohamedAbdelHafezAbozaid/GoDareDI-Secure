rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // SDK files storage rules
    match /sdk-files/{allPaths=**} {
      allow read: if true; // Public read access for SDK files
      allow write: if request.auth != null && 
        request.auth.token.email == "bota78336@gmail.com"; // Only super admin can upload
    }
    
    // User uploads
    match /user-uploads/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == userId;
    }
  }
}
