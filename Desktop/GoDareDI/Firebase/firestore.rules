rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Super Admin (bota78336@gmail.com) has full access to all collections
    match /{document=**} {
      allow read, write: if request.auth != null && request.auth.token.email == 'bota78336@gmail.com';
    }
    
    // Users collection - users can read/write their own user document, super admin can read all
    match /users/{userId} {
      allow read, write, create, list: if request.auth != null && 
        (request.auth.uid == userId || request.auth.token.email == 'bota78336@gmail.com');
    }
    
    // AppDashboards collection - users can read/write their own app dashboards, super admin can read all
    match /appDashboards/{appId} {
      allow read, write, create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId ||
         request.auth.token.email == 'bota78336@gmail.com');
      allow list: if request.auth != null && 
        (request.auth.token.email == 'bota78336@gmail.com');
    }
    
    // Tokens collection - users can read/write their own tokens, super admin can read all
    match /tokens/{tokenId} {
      allow read, write, create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId ||
         request.auth.token.email == 'bota78336@gmail.com');
      allow list: if request.auth != null && 
        (request.auth.token.email == 'bota78336@gmail.com');
    }
    
    // SDK Usage collection - users can read/write their own usage data
    match /sdk-usage/{usageId} {
      allow read, write, create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId ||
         request.auth.token.email == 'bota78336@gmail.com');
      allow list: if request.auth != null;
    }
    
    // Apps collection - users can read/write their own apps, super admin can read all
    match /apps/{appId} {
      allow read, write, create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId ||
         request.auth.token.email == 'bota78336@gmail.com');
      allow list: if request.auth != null && 
        (request.auth.token.email == 'bota78336@gmail.com');
    }
    
    // User Dashboards collection - users can read/write their own dashboard data
    match /userDashboards/{dashboardId} {
      allow read, write, create: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.uid == request.resource.data.userId ||
         request.auth.token.email == 'bota78336@gmail.com');
      allow list: if request.auth != null;
    }
    
    // Analytics collection - users can read their own analytics, super admin can read all
    match /analytics/{analyticsId} {
      allow read: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.token.email == 'bota78336@gmail.com');
      allow write: if request.auth != null && 
        (request.auth.uid == resource.data.userId || 
         request.auth.token.email == 'bota78336@gmail.com');
      allow list: if request.auth != null;
    }
  }
}